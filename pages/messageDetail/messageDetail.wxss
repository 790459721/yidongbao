/* pages/messageDetail/messageDetail.wxss */
.messageDetail_wrapper {
  width: 100vw;
  min-height: 100vh;
  padding: 47rpx;
}
.messageDetail_wrapper .messageDetail_client_box {
  padding: 34rpx 0 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.messageDetail_wrapper .messageDetail_client_box .client_detail_block {
  display: flex;
}
.messageDetail_wrapper .messageDetail_client_box .client_detail_block .client_avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 27rpx;
  border-radius: 50%;
}
.messageDetail_wrapper .messageDetail_client_box .client_detail_block .client_detail_box .detail_top {
  display: flex;
  align-items: center;
}
.messageDetail_wrapper .messageDetail_client_box .client_detail_block .client_detail_box .detail_top .detail_name {
  margin-right: 17rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  flex-shrink: 0;
}
.messageDetail_wrapper .messageDetail_client_box .client_detail_block .client_detail_box .detail_top .detail_sex {
  width: 37rpx;
  height: 37rpx;
  background: #ff7770;
  border-radius: 2rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  margin: 0 27rpx 0 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}
.messageDetail_wrapper .messageDetail_client_box .client_detail_block .client_detail_box .detail_top .detail_sex.male {
  background: #0ABBFF;
}
.messageDetail_wrapper .messageDetail_client_box .client_detail_block .client_detail_box .detail_top .detail_id {
  color: #999;
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
}
.messageDetail_wrapper .messageDetail_client_box .client_detail_block .client_detail_box .detail_phone {
  font-size: 28rpx;
  color: #666666;
  height: 40rpx;
  margin: 14rpx 0 19rpx;
}
.messageDetail_wrapper .messageDetail_client_box .client_detail_block .client_detail_box .detail_create_time {
  height: 33rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #999999;
  line-height: 33rpx;
}
.messageDetail_wrapper .messageDetail_client_box .detail_message_btn {
  width: 130rpx;
  height: 55rpx;
  background: #33c29d;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 500;
  font-size: 28rpx;
  line-height: 40rpx;
}
.messageDetail_wrapper .message_list_box {
  width: 100%;
  background: #f7f7f7;
  min-height: 150rpx;
  border-radius: 2rpx;
  padding-bottom: 80rpx;
  position: relative;
  padding: 20rpx 24rpx 20rpx 57rpx;
}
.messageDetail_wrapper .message_list_box:before {
  content: '';
  width: 0;
  height: 0;
  border-width: 0 17rpx 17rpx;
  border-style: solid;
  border-color: transparent transparent #f7f7f7;
  /*透明 透明  灰*/
  position: absolute;
  top: -16rpx;
  left: 31rpx;
}
.messageDetail_wrapper .message_list_box .message_icon_message {
  color: #999;
  font-size: 28rpx;
  position: absolute;
  top: 15rpx;
  left: 17rpx;
}
.messageDetail_wrapper .message_list_box .message_item_box {
  display: flex;
  padding: 25rpx 0;
  width: 580rpx;
  border-bottom: 1rpx solid #ddd;
}
.messageDetail_wrapper .message_list_box .message_item_box .person_avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #ccc;
}
.messageDetail_wrapper .message_list_box .message_item_box .person_info {
  padding-left: 12rpx;
  width: 480rpx;
}
.messageDetail_wrapper .message_list_box .message_item_box .person_info .info_top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.messageDetail_wrapper .message_list_box .message_item_box .person_info .info_top .top_left .name {
  color: #333;
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: 500;
  margin-right: 20rpx;
}
.messageDetail_wrapper .message_list_box .message_item_box .person_info .info_top .top_left .jobtitle {
  color: #999;
  font-size: 24rpx;
  line-height: 33rpx;
}
.messageDetail_wrapper .message_list_box .message_item_box .person_info .info_top .top_right {
  color: #999;
  font-size: 24rpx;
  line-height: 33rpx;
}
.messageDetail_wrapper .message_list_box .message_item_box .person_info .bottom_content {
  color: #666;
  font-size: 24rpx;
  line-height: 33rpx;
  margin-top: 7rpx;
}
