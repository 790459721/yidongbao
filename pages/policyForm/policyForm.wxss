/* pages/policyForm/policyForm.wxss */
.policy_form_wrapper {
  color: #333;
  background: #f7f7f7;
}
.policy_form_wrapper .cells_title .weui-cells__title {
  color: #333;
  font-size: 34rpx;
  font-weight: bold;
}
.policy_form_wrapper .cells_title .cell_title {
  min-height: 80rpx;
  font-size: 28rpx;
}
.policy_form_wrapper .cells_title .cell_title .weui-cell__hd {
  width: 260rpx;
  white-space: nowrap;
}
.policy_form_wrapper .cells_title .cell_title .placeholder_text {
  color: #888;
}
.policy_form_wrapper .cells_title .cell_title .select_sex_box {
  display: flex;
}
.policy_form_wrapper .cells_title .cell_title .select_sex_box .option_sex {
  border: 1rpx solid #777;
  color: #777;
  margin-right: 20rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  padding: 8rpx 28rpx;
}
.policy_form_wrapper .cells_title .cell_title .icon_container {
  display: flex;
  align-items: center;
}
.policy_form_wrapper .cells_title .cell_title .icon_container .click_desc {
  margin-left: 10rpx;
  color: #0D919E;
}
.policy_form_wrapper .policy_form_footer_box {
  width: 100vw;
  background: #fff;
  z-index: 99;
  position: fixed;
  bottom: 0;
  left: 0;
}
.policy_form_wrapper .policy_form_footer_box.ipx_bottom {
  padding-bottom: 34rpx;
}
.policy_form_wrapper .policy_form_footer_box .checkbox_box {
  border-top: 1rpx solid #eee;
  padding: 10rpx 20rpx;
}
.policy_form_wrapper .policy_form_footer_box .checkbox_box text {
  font-size: 24rpx;
}
.policy_form_wrapper .policy_form_footer_box .checkbox_box .remark_text {
  color: #0D919E;
}
.policy_form_wrapper .policy_form_footer_box .checkbox_box .checkbox_item {
  transform: scale(0.6, 0.6);
}
.policy_form_wrapper .policy_form_footer_box .footer_handle_box {
  padding: 15rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
}
.policy_form_wrapper .policy_form_footer_box .footer_handle_box .left {
  display: flex;
  align-items: center;
}
.policy_form_wrapper .policy_form_footer_box .footer_handle_box .left .left_desc {
  color: #666;
  font-size: 28rpx;
  margin-right: 30rpx;
}
.policy_form_wrapper .policy_form_footer_box .footer_handle_box .left .left_price {
  color: #FF8A01;
  font-weight: 700;
  font-size: 44rpx;
}
.policy_form_wrapper .policy_form_footer_box .footer_handle_box .sub_btn {
  width: 320rpx;
  height: 88rpx;
  border-radius: 100rpx;
  background: #FF8A01;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 34rpx;
  font-weight: 700;
}
.policy_form_wrapper .fixed_base {
  width: 100vw;
  height: 240rpx;
}
.policy_form_wrapper .policy_dialog_back {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  display: flex;
  align-items: flex-end;
}
.policy_form_wrapper .policy_dialog_back .scroll_box {
  width: 100vw;
  height: 70vh;
  background: #fff;
  display: flex;
}
.policy_form_wrapper .policy_dialog_back .scroll_box .dialog_scroll_left {
  height: 100%;
  width: 280rpx;
  background: #f7f7f7;
}
.policy_form_wrapper .policy_dialog_back .scroll_box .dialog_scroll_left .scroll_left {
  height: 100%;
  width: 280rpx;
}
.policy_form_wrapper .policy_dialog_back .scroll_box .dialog_scroll_left .scroll_left .left_item {
  height: 110rpx;
  width: 280rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.policy_form_wrapper .policy_dialog_back .scroll_box .dialog_scroll_left .scroll_left .left_item .item_text {
  display: block;
  width: 240rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.policy_form_wrapper .policy_dialog_back .scroll_box .dialog_scroll_left .scroll_left .left_item.active {
  background: #fff;
  border-bottom: 3rpx solid #33c29d;
}
.policy_form_wrapper .policy_dialog_back .scroll_box .dialog_scroll_right {
  height: 100%;
  width: 610rpx;
}
.policy_form_wrapper .policy_dialog_back .scroll_box .dialog_scroll_right .scroll_right {
  height: 100%;
  width: 610rpx;
}
.policy_form_wrapper .policy_dialog_back .scroll_box .dialog_scroll_right .scroll_right .right_item {
  height: 110rpx;
  display: flex;
  align-items: center;
  padding-left: 81rpx;
}
