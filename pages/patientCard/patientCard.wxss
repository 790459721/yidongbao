/* pages/myCard/myCard.wxss */
.my_card_wrapper .my-cells {
  display: flex;
}
.my_card_wrapper .my-cells .weui-input {
  text-align: right;
  padding-right: 20rpx;
}
.my_card_wrapper .my-cells span {
  color: red;
  margin-right: 5rpx;
}
.my_card_wrapper .my-cells .doctor_avatar {
  width: 60rpx;
  height: 60rpx;
  margin-top: 10rpx;
}
.my_card_wrapper .my-cells .picker_jobTitle .weui-select {
  text-align: right;
  height: 50rpx;
  line-height: 50rpx;
}
.my_card_wrapper .my-cells .picker_jobTitle .weui-select.default_text {
  color: rgba(0, 0, 0, 0.5);
}
.my_card_wrapper .my-cells .get_code {
  width: 126rpx;
  height: 45rpx;
  border-radius: 23rpx;
  border: 1rpx solid #33c29d;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #33C29D;
}
.my_card_wrapper .weui-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #33C29D;
  width: 520rpx;
  height: 96rpx;
  background: #33c29d;
  border-radius: 48rpx;
  border: 2rpx solid rgba(5, 5, 5, 0.08);
  font-weight: 400;
  font-size: 36rpx;
}
.my_card_wrapper .dialog_back {
  width: 100%;
  height: 100%;
  position: fixed;
  background: #fff;
  top: 0;
  z-index: 999;
  display: flex;
  color: #666666;
  font-size: 36rpx;
}
.my_card_wrapper .dialog_back .dialog_scroll_left {
  height: 100vh;
  width: 280rpx;
  background: #f7f7f7;
}
.my_card_wrapper .dialog_back .dialog_scroll_left .scroll_left {
  height: 100%;
  width: 280rpx;
}
.my_card_wrapper .dialog_back .dialog_scroll_left .scroll_left .left_item {
  height: 110rpx;
  width: 280rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.my_card_wrapper .dialog_back .dialog_scroll_left .scroll_left .left_item .item_text {
  display: block;
  width: 240rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.my_card_wrapper .dialog_back .dialog_scroll_left .scroll_left .left_item.active {
  background: #fff;
  border-bottom: 3rpx solid #33c29d;
}
.my_card_wrapper .dialog_back .dialog_scroll_right {
  height: 100vh;
  width: 610rpx;
}
.my_card_wrapper .dialog_back .dialog_scroll_right .scroll_right {
  height: 100vh;
  width: 610rpx;
}
.my_card_wrapper .dialog_back .dialog_scroll_right .scroll_right .right_item {
  height: 110rpx;
  display: flex;
  align-items: center;
  padding-left: 81rpx;
}
